<h1>TASKS</h1>

<%= link_to "New Task", new_task_path %>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <p> <input type="checkbox" <%= "checked" if task.completed %>>
          <%= link_to task.title, task_path(task) %> |
          Details: <%= task.details %>
      </p>
    </li>
  <% end %>
</ul>
